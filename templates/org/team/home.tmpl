<!--
	Template providing the home page for organization teams e.g. http://domain.tld/org/ORG/teams/TEAM
-->

{{template "base/head" .}}
<div class="page-content organization teams">
	{{template "org/header" .}}
	<div class="ui container">
		{{template "base/alert" .}}
		<div class="ui grid">
			<div class="ui six wide column">
				{{template "org/team/sidebar" .}}
			</div>
			<!-- DNM(Krey): Make discussions into a toggle in a settings -->
			<div class="ui ten wide column">
				{{template "org/team/discussions" .}}
			</div>
		</div>
	</div>
</div>
{{template "base/footer" .}}